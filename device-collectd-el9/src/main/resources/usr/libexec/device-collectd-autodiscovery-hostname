#!/bin/bash

#
# Collectd Autodiscovery - Hostname
# =================================
#
# This script autogenerates the collectd config.

set -e
umask 0007


cat >> "/tmp/hostname.conf" <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

#Hostname    "$(hostname -f)"
EOF

install -m 644 "/tmp/hostname.conf" "/etc/collectd.d/hostname.conf"


