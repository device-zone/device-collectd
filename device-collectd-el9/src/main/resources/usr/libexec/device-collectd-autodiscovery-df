#!/bin/bash
  
#
# Collectd Autodiscovery - Df
# ===========================
#
# This script autogenerates the collectd config.

set -e
umask 0007


cat >> "/tmp/df.conf" <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

LoadPlugin df

<Plugin "df">
  FSType devtmpfs
  FSType tmpfs
  IgnoreSelected true
</Plugin>

EOF

install -m 644 "/tmp/df.conf" "/etc/collectd.d/df.conf"



